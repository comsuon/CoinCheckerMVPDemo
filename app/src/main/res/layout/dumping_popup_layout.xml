<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightControl"
    android:gravity="center"
    android:padding="16dp">
    <ImageView
        android:id="@+id/emoticon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_confused"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/coinName"
        android:layout_below="@+id/emoticon"
        android:text="Bitcoin pumping 132% last hour"
        style="@style/DumpingText"
        />

    <TextView
        android:id="@+id/price"
        style="@style/DumpingText"
        android:text="Current Price: 13231232"
        android:layout_below="@id/coinName"
        />

</RelativeLayout>